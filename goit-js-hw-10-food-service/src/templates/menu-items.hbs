{{#each this}}
<li>
    <article>
        <img src='{{image}}' alt="{{name}}">
        <div>
            <h2>{{name}}</h2>
            <p><i>monetization_on</i>{{price}} кредитов</p>
            <p>{{description}}</p>
            <ul>
                <li>{{ingredients}}</li>
            </ul>
        </div>
        <button><i>shopping_cart</i>В корзину</button>
    </article>
</li>
{{/each}}

